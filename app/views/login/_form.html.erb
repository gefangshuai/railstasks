<%= form_for(:login, url: login_index_path, :html => {:class => 'form-horizontal'}) do |f| %>
  <div class="form-group">
    <label for="inputUsername" class="col-sm-4 control-label">用户名</label>
    <div class="col-sm-8">
      <%= f.text_field :username, :class => 'form-control', :placeholder => '输入用户名'%>
    </div>
  </div>
  <div class="form-group">
    <label for="inputPassword3" class="col-sm-4 control-label">登录密码</label>
    <div class="col-sm-8">
      <%= f.password_field :password, :class => 'form-control', :placeholder => '输入用户密码' %>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-4 col-sm-8">
      <div class="checkbox">
        <label>
          <input type="checkbox"> 记住帐号
        </label>
      </div>
    </div>
  </div>
  <div class="form-group">
    <div class="col-sm-offset-4 col-sm-8">
      <%= f.submit '登  录', :class => 'btn btn-default btn-primary' %>
    </div>
  </div>
<% end %> 